    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        :root {
            --blue-main: #3bbaff;
            --blue-soft: #d9f2ff;
            --blue-dark: #1b6fa8;
            --gray-bg: #f7f9fb;
            --gray-text: #6b7280;
            --card-border: rgba(0,0,0,0.08);
        }

        body {
            background: var(--gray-bg);
            color: #1f2937;
            font-family: "Inter", system-ui, sans-serif;
        }

        /* NAVIGATION / TOPBAR */
        .topbar {
            background: white;
            border-bottom: 1px solid rgba(0,0,0,0.08);
        }
        .topbar-title {
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--blue-dark);
        }
        .topbar-subtitle {
            font-size: 0.85rem;
            color: var(--gray-text);
        }

        .badge-deficit {
            background: var(--blue-soft);
            border: 1px solid var(--blue-main);
            color: var(--blue-dark);
            border-radius: 50px;
            padding: 0.35rem 0.9rem;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .btn-top {
            font-size: 0.8rem;
            border-radius: 999px;
            padding-inline: 0.9rem;
        }
        .btn-top-active {
            background: var(--blue-main);
            color: white;
            border: none;
        }
        .btn-top-outline {
            border-color: var(--blue-dark);
            color: var(--blue-dark);
        }
        .btn-top-outline:hover {
            background: var(--blue-soft);
        }

        /* PAGE STRUCTURE */
        .page-wrap {
            padding: 1.4rem 1.5rem 2.5rem;
        }
        .page-title {
            font-size: 1.55rem;
            font-weight: 700;
            color: var(--blue-dark);
        }
        .page-subtitle {
            font-size: 0.9rem;
            color: var(--gray-text);
            margin-bottom: 1.2rem;
        }

        /* FILTER CARD */
        .filters-card {
            background: white;
            border-radius: 1.2rem;
            border: 1px solid var(--card-border);
            padding: 1rem 1.2rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            margin-bottom: 1.5rem;
        }
        .filters-card-title {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--blue-dark);
            margin-bottom: 0.7rem;
        }

        .filters .form-control,
        .filters .form-select {
            background: white;
            border-radius: 999px;
            border: 1px solid rgba(0,0,0,0.2);
            font-size: 0.85rem;
            padding-inline: 0.85rem;
        }
        .filters .form-control:focus,
        .filters .form-select:focus {
            border-color: var(--blue-main);
            box-shadow: 0 0 0 2px rgba(59,130,246,0.3);
        }

        .btn-filter-primary {
            background: linear-gradient(135deg, #38bdf8, #0ea5e9);
            color: white;
            border: none;
            font-weight: 600;
            border-radius: 999px;
        }
        .btn-filter-primary:hover {
            filter: brightness(1.07);
        }

        .btn-filter-secondary {
            border-color: rgba(0,0,0,0.4);
            color: #1f2937;
            border-radius: 999px;
        }

        /* MAIN CARD */
        .card-main {
            background: white;
            border-radius: 1.2rem;
            border: 1px solid var(--card-border);
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        }
        .card-main-header {
            padding: 0.9rem 1.2rem;
            border-bottom: 1px solid var(--card-border);
            display: flex;
            justify-content: space-between;
        }
        .card-main-title {
            font-size: 1rem;
            font-weight: 600;
            color: var(--blue-dark);
        }
        .card-main-meta {
            font-size: 0.85rem;
            color: var(--gray-text);
        }

        /* TABLE */
        .table-custom thead {
            background: white;
            border-bottom: 1px solid var(--card-border);
        }
        .table-custom th {
            color: var(--gray-text);
            text-transform: uppercase;
            font-size: 0.75rem;
        }
        .table-custom td {
            font-size: 0.85rem;
        }
        .table-custom tbody tr:hover {
            background-color: var(--blue-soft);
        }

        .pill-lang {
            padding: 0.2rem 0.55rem;
            border-radius: 999px;
            border: 1px solid var(--blue-main);
            color: var(--blue-dark);
            font-size: 0.75rem;
        }

        .pill-irrigation {
            padding: 0.25rem 0.7rem;
            border-radius: 999px;
            background: var(--blue-soft);
            color: var(--blue-dark);
            font-size: 0.78rem;
            font-weight: 600;
        }

        .cell-muted {
            color: var(--gray-text);
            font-size: 0.78rem;
        }
    </style>
</head>
<body>

<!-- TOPBAR -->
